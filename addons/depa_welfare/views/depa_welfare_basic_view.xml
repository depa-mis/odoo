                         string="คะแนนที่ใช้"
                         readonly="1"
                         force_save="1"/>
                  <field name="amount_A"
                         readonly="1"
                         force_save="1"/>
                </group>
                <group colspan="6">
                  <field name="plan_B"
                         string="แผนประกันสุขภาพ"
                         required="1"
                         domain="[('health_insurance_lines_id.year', '=', welfare_basic_fiscal_year), ('disable_employee', '=', False)]"
