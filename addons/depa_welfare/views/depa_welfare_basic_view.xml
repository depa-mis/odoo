<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- view for users -->

    <record model="ir.ui.view" id="depa_welfare_basic_list">
      <field name="name">depa_welfare_basic list</field>
      <field name="model">depa_welfare_basic</field>
      <field name="arch" type="xml">
        <tree string="Welfare Basic List" default_order="wel_basic_no desc">
          <field name="wel_basic_no" string="เลขที่เอกสาร"/>
          <field name="emp_name" string="ชื่อ-นามสกุล"/>
          <field name="welfare_year" string="ปีงบประมาณ"/>
          <field name="point_basic_total" string="คะแนนที่ใช้งาน"/>
          <field name="state" string="สถานะ"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="depa_welfare_basic_form">
      <field name="name">depa welfare Basic form</field>
      <field name="model">depa_welfare_basic</field>
      <field name="arch" type="xml">

        <form string="Welfare Basic Form" duplicate="0" copy="0">
          <field name="is_create" invisible="1"/>
          <field name="state" invisible="1" />
          <field name="welfare_year" invisible="1" />
          <field name="no_ce" invisible="1" />
          <field name="welfare_owner" invisible="1" />
          <field name="show_button_resend_to_inspector" invisible="1"/>
          <field name="is_open_selection" invisible="1" />
          <field name="show_sent_basic_button" invisible="1"/>
          <header>
            <button string="ยืนยันการเลือกแผนประกัน"
                    name="sent_welfare_basic"
                    confirm="คุณได้ทำการตรวจสอบข้อมูลและยืนยันการเลือกแผนประกันแล้วใช่หรือไม่"
                    attrs="{'invisible': ['|', '|', ('state', 'not in', ('draft')), ('is_open_selection', '!=', True), ('show_sent_basic_button', '!=', True)]}"
                    type="object"
                    class="oe_highlight"/>
            <field name="state" widget="statusbar"/>
          </header>
          <sheet>
            <div class="oe_title">
              <label for="wel_basic_no" string="WELFARE BASIC NO." class="oe_edit_only"/>
              <h1>
                <field name="wel_basic_no" placeholder="WELFARE BASIC NO." attrs="{'readonly': True}"/>
              </h1>
            </div>
            <div class="oe_right">
              <p style="color:red">
                * ดำเนินการได้ตั้งแต่วันที่
                <field name="welfare_basic_start_date"
                       readonly="1"
                       force_save="1"
                       nolabel="1"/> ถึง
                <field name="welfare_basic_end_date"
                       readonly="1"
                       force_save="1"
                       nolabel="1"/>
              </p>
            </div>
            <group>
              <group colspan="4" col="12">
                <group colspan="3">
                  <field name="emp_code"
                         string="รหัสพนักงาน"
                         attrs="{'readonly': True}"/>
                </group>
                <group colspan="5">
                  <field name="emp_name"
                         string="ชื่อ-นามสกุล"
                         attrs="{'readonly': True}"/>
                </group>
                <group colspan="4">
                  <field name="emp_dept_name"
                         string="สังกัด"
                         attrs="{'readonly': True}"/>
                </group>
              </group>
              <group colspan="4" col="12">
                <group colspan="3">
                  <field name="point_balance"
                         string="คะแนนคงเหลือ"
                         attrs="{'readonly': True}"/>
                </group>
                <group colspan="5">
                  <field name="welfare_basic_fiscal_year"
                         string="ปีงบประมาณ"
                         options='{"no_open": True}'
                         readonly="1"
                         force_save="1"/>
                </group>
                <group colspan="4">
                  <field name="welfare_basic_document_date"
                         string="วันที่สร้างเอกสาร"
                         readonly="1"
                         force_save="1" />
                </group>

              </group>
              <group colspan="4" col="12">
                <group colspan="6">
                  <field name="sequence_A" invisible="1"/>
                  <field name="plan_A"
                         string="แผนประกันชีวิต"
                         required="1"
                         domain="[('life_insurance_lines_id.year', '=', welfare_basic_fiscal_year)]"
                         options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True, 'no_open': True}"/>
