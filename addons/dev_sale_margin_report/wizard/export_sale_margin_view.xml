<odoo>
    <!--form-->
    <record id="form_export_sale_margin_report" model="ir.ui.view">
        <field name="name">form.export.sale.margin.report</field>
        <field name="model">export.sale.margin</field>
        <field name="arch" type="xml">
            <form string="Sale Margin Form">
                <group>
                    <group>
                        <field name="start_date"/>
                        <field name="customer_ids" widget="many2many_tags" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                        <field name="product_ids" widget="many2many_tags" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                        <field name="user_ids" widget="many2many_tags" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                        <field name="company_ids" widget="many2many_tags" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                        <field name="warehouse_ids" widget="many2many_tags" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                        <field name="sale_team_ids" widget="many2many_tags" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                    </group>
                </group>
                <field name="highlight_negative_margin"/> <label for="highlight_negative_margin" string="Highlight Negative Margin"/>
                <footer>
                    <button string=" Export Excel" name="export_sale_margin_report" type="object"
                            class="oe_highlight" icon="fa-file-excel-o"/>&#160;or
                    <button string=" Print PDF" name="print_pdf_sale_margin" type="object"
                            class="oe_highlight" />&#160;or
                    <button string="Close Window" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!--Action-->
    <record id="action_export_sale_margin_report" model="ir.actions.act_window">
        <field name="name">Sale Margin Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">export.sale.margin</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="form_export_sale_margin_report"/>
        <field name="target">new</field>
    </record>

    <!--Menus-->
    <menuitem name="Sale Margin Report"
              id="menu_print_sale_margin_reports"
              parent="sale.menu_sale_report"
              action="action_export_sale_margin_report"
              sequence="0"/>
</odoo>