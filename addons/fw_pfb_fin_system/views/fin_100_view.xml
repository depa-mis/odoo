<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Approver Wizard -->
        <record id="wizard_approver_fin_100_view" model="ir.ui.view">
            <field name="name">wizard.approver.fin.100.view</field>
            <field name="model">wizard.fw_pfb_fin_system_100_approver</field>
            <field name="arch" type="xml">
                <form string="Memo">
                    <group>
                        <field name="memo"/>
                    </group>
                    <footer>
                        <button name="acknowledge_fin_100" string="Acknowledge" type="object" class="oe_highlight"
                                invisible="context.get('not_ack', False)"/>
                        <button name="approve_fin_100" string="Approve" type="object" class="oe_highlight"
                                invisible="context.get('ack', False)"/>
                        <button name="reject_fin_100" string="Reject" type="object" class="oe_highlight"
                                invisible="context.get('ack', False)"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_approver_fin_100_action" model="ir.actions.act_window">
            <field name="name">Approver Memo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.fw_pfb_fin_system_100_approver</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <!-- END Approver Wizard -->

        <!-- FIN 100 system -->
        <record model="ir.ui.view" id="fin_system_100_request_tree_view">
            <field name="name">fin.system.100.request.tree.view</field>
            <field name="model">fw_pfb_fin_system_100</field>
            <field name="arch" type="xml">
                <tree string="Request">
                    <field name='fin_date'/>
                    <field name="fin_no"/>
                    <field name="priority"/>
                    <field name="fin_type"/>
                    <field name="fin_objective"/>
                    <field name="fin_ref"/>
                    <field name="fin_remark"/>
                    <field name="price_total"/>
                    <field name='state'/>
                    <field name="requester"/>
                    <field name="department"/>
                    <field name="is_fin_lock"/>
                    <field name="show_fin" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="fin_system_100_request_form_view">
            <field name="name">fin.system.100.request.form.view</field>
            <field name="model">fw_pfb_fin_system_100</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="approver_rights" invisible="1"/>
                        <field name="is_fin_lock" invisible="1"/>
                        <field name="target_approver" invisible="1"/>
                        <field name="is_requester" invisible="1"/>
                        <field name="is_director" invisible="1"/>
                        <field name="can_cancel" invisible="1"/>
                        <field name="can_create_pr" invisible="1"/>
                        <field name="can_set_complete" invisible="1"/>
                        <field name="has_history" invisible="1"/>

                        <button string="Sent to supervisor" name="fin_sent_to_supervisor" states="draft" type="object"
                                class="oe_highlight"
                                attrs="{'invisible':['|', '|', ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>
                        <button string="Set to draft" name="fin_set_to_draft" type="object"
                                attrs="{'invisible':['|',('is_fin_lock','=',True), ('state','not in',['cancelled','reject']) ]}"/>
                        <button string="Complete" name="fin_complete"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible':['|','|',('target_approver','!=','DirectorOfOffice'),('is_fin_lock','=',True)]}"
                                groups="fin_system.fw_pfb_fin_system_approver"/>
                        <button string="Lock" name="fin_lock" type="object"
                                attrs="{'invisible':['|',('is_fin_lock','=',True)]}"/>
                        <button string="Unlock" name="fin_unlock" type="object"
                                attrs="{'invisible':[('is_fin_lock','!=',True)]}"/>
                        <button string="Set To Complete" 
                                class="oe_highlight"
                                attrs="{'invisible':[('can_set_complete','!=',True)]}"
                                name="change_to_complete" 
                                type="object" />
                        <button string="Cancel" name="fin_cancel" type="object"
                                attrs="{'invisible':['|','|',('state','in',['draft','cancelled']),('is_fin_lock','=',True),('can_cancel','=',False)]}"/>
                        <field name="state" widget="statusbar"/>           
                    </header>
                    <sheet string="Request">
                        <div class="oe_button_box" name="button_box">
<!--                            <button name="action_view_fin"-->
<!--                                type="object"-->
<!--                                class="oe_stat_button"-->
<!--                                icon="fa-pencil-square-o"-->
<!--                                attrs="{'invisible': [('pr_count', '=', 0)]}">-->
<!--                                <field name="pr_count" widget="statinfo" string="Purchase Request"/>-->
<!--                            </button>-->
                            <button name="fin100_history" type="object" class="oe_stat_button" 
                                icon="fa-pencil-square-o" attrs="{'invisible': [('has_history', '=', False)]}">                            
                                <label string="Reject History" />
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="fin_no" string="FIN NO." class="oe_edit_only"/>
                            <h1>
                                <field name="fin_no"
                                       placeholder="FIN NO."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name='fin_type'
                                    attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>
                                <field name='requester'
                                    options='{"create":False,"create_edit": False,"no_open": True}'
                                    context="{'default_groups_ref': ['fw_pfb_fin_system_user']}"
                                    attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>
                                <field name='department'
                                    options='{"create":False,"create_edit": False,"no_open": True}'
                                    attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>
                                <field name="fin_date"/>
                                <field name='subject'
                                    attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>
                                <field name='subject_to'
                                    attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>
                                <field name='fin_ref'
                                    attrs="{'readonly':['|', ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>
                                <field name='fin_objective'
                                    widget="selection" 
                                    attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>
                                <field name='objective'
                                    attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>
                                <field name='priority'
                                    attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>
                                
                            </group>
                            <group>
                                <label for="amount" String="Participantas Quantity"/>
                                <div name="amount_div" class="o_row">
                                    <field name='participantas_quantity'
                                        attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>
                                    <label for="participantas_quantity" string="People"/>
                                </div>
                            
                                <field name="place" widget="many2many_binary"
                                    attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>

                                <field name="operation_date" widget="many2many_binary"
                                    attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>

                                <field name="seminar_partcipants" widget="many2many_binary"
                                    attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>

                                <field name='other'
                                    attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>

                                <field name='estimate_output'
                                    attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>

                                <field name='please_consider' readonly="1"/>

                                <field name="template_id" widget="many2many_tags"
                                    attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string='Request lines'>
                                <field name='fin_lines'
                                       attrs="{'readonly':['|', '|', ('state', 'not in', ['draft', 'DirectorOfOffice']),
                                       ('is_fin_lock','=',True),
                                       ('is_requester', '=', False),
                                       ('is_director', '=', False)]}">
                                </field>

                                <group class="oe_subtotal_footer oe_right">
                                    <div class="oe_subtotal_footer_separator oe_inline">
                                        <label for="price_total" string="Total"/>
                                    </div>
                                    <field name="price_total" nolabel="1" class="oe_subtotal_footer_separator"
                                           widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <field name='fin_remark'
                                       attrs="{'readonly':['|', ('is_fin_lock','=',True), ('is_requester', '=', False), ('is_director', '=', False)]}"
                                       class="oe_inline" paceholder="Remark..."/>
                            </page>
                            <page string="Participant">
                                <field name="participants"
                                       attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"
                                       mode="tree">
                                    <tree>
                                        <field name="name_related"/>
                                        <field name="department_id"/>
                                        <field name="job_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string='Budget Details'>
                                <field name="fin_projects"/>
                            </page>
                            <page string="Approver">
                                <group>
                                    <field name="flow_template_eroe"
                                        widget="selection" 
                                        attrs="{'invisible':[('fin_type','!=','eroe')]}"/>
                                    <field name="flow_template_erob"
                                        widget="selection" 
                                        attrs="{'invisible':[('fin_type','!=','erob')]}"/>
                                    <field name="flow_template_proo"
                                        widget="selection" 
                                        attrs="{'invisible':[('fin_type','!=','proo')]}"/>
                                </group>
                                <field name="approver"
                                       attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>
                            </page>
                            <page string="Attachments">
                                <group>
                                    <field name="attachment" widget="many2many_binary"
                                        attrs="{'readonly':['|', '|',('state', 'not in', ['draft']), ('is_fin_lock','=',True), ('is_requester', '=', False)]}"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="fin_system_100_request_search" model="ir.ui.view">
            <field name="name">fin.system.100.request.search</field>
            <field name="model">fw_pfb_fin_system_100</field>
            <field name="arch" type="xml">
                <search string="Search state">
                    <!-- <field name="state"/> -->
                    <filter string="Draft" name="state_draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Cancel" name="state_cancel" domain="[('state', '=', 'cancelled')]"/>
                    <filter string="Reject" name="state_reject" domain="[('state', '=', 'reject')]"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="fin_system_100_pending_tree_view">
            <field name="name">fin.system.100.pending.tree.view</field>
            <field name="model">fw_pfb_fin_system_100</field>
            <field name="arch" type="xml">
                <tree string="Pending" colors="red:state in (
                        'preliminary_reject',
                        'related_reject',
                        'deputy_reject',
                        'director_reject',
                        'cancelled'
                    );">
                    <field name='fin_date'/>
                    <field name="fin_no"/>
                    <field name="priority"/>
                    <field name="fin_type"/>
                    <field name="fin_objective"/>
                    <field name="fin_ref"/>
                    <field name="fin_remark"/>
                    <field name="price_total"/>
                    <field name='state'/>
                    <field name="requester"/>
                    <field name="department"/>
                    <field name="is_fin_lock"/>
                    <field name="show_fin" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="fin_system_100_line_tree_view">
            <field name="name">fin.system.100.line.tree.view</field>
            <field name="model">fw_pfb_fin_system_100_line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name='fin100_state' invisible="1"/>
                    <field name='product_id'/>
                    <field name="description"/>
                    <field name='projects_and_plan_year' readonly="1"/>
                    <field name="projects_and_plan"/>
                    <field name="price_unit"/>
                    <field name="product_uom_qty"/>
                    <field name="product_uom"/>
                    <field name="price_subtotal" />
                    <field name="price_all_fin401" readonly="1" />
                    <field name="price_all_fin201" readonly="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="fin_system_100_line_form_view">
            <field name="name">fin.system.100.line.form.view</field>
            <field name="model">fw_pfb_fin_system_100_line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name='product_id' 
                                options='{"create":False,"create_edit": False,"no_open": True}'
                                attrs="{'readonly':[('fin100_state', 'not in', ['draft'])]}"/>
                        </group>
                        <group>
                            <field name='fin100_state' invisible="1"/>
                            <field name="description"
                                attrs="{'readonly':[('fin100_state', 'not in', ['draft'])]}"/>
                            <field name='projects_and_plan_year' readonly="1"/>
                            <field name="projects_and_plan"
                                options='{"create":False,"create_edit": False,"no_open": True}'
                                attrs="{'readonly':[('fin100_state', 'not in', ['draft', 'DirectorOfOffice'])]}"/>
                            <field name="price_unit"
                                attrs="{'readonly':[('fin100_state', 'not in', ['draft'])]}"/>
                            <field name="product_uom_qty"
                                attrs="{'readonly':[('fin100_state', 'not in', ['draft'])]}"/>
                            <field name="product_uom"
                                attrs="{'readonly':[('fin100_state', 'not in', ['draft'])]}"/>
                            <field name="price_subtotal" 
                                attrs="{'readonly':[('fin100_state', 'not in', ['draft'])]}"/>
                            <field name="price_all_fin401" readonly="1" />
                            <field name="price_all_fin201" readonly="1"/>
                        </group>
                        <separator string="FIN401" />
                        <field name="item_fin401_ids" >
                            <tree create="false" delete="false" editable="bottom">
                                <field name="fin_date" />
                                <field name="fin401_id" />
                                <field name="product_id" />
                                <field name="description" />
                                <field name="total" sum="FIN401 Total"/>
                                <field name="status" />
                            </tree>
                        </field>
                        <separator string="FIN201" />
                        <field name="item_fin201_ids" >
                            <tree create="false" delete="false" editable="bottom">
                                <field name="fin_date" />
                                <field name="fin201_id" />
                                <field name="product_id" />
                                <field name="description" />
                                <field name="total" sum="FIN201 Total"/>
                                <field name="status" />
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="fw_pfb_fin_system_100_approver_tree_view">
            <field name="name">fin.system.100.approver.tree.view</field>
            <field name="model">fw_pfb_fin_system_100_approver</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0">
                    <field name="approve_active"/>
                    <field name="position_index"/>
                    <field name="approve_position" readonly="1"/>
                    <field name="employee_id" />
                    <field name="fin_position" readonly="1"/>
                    <field name="action_date" readonly="1"/>
                    <field name="memo" readonly="1"/>
                    <field name="show_fin" invisible="1"/>
                    <field name="is_related_department" invisible="1"/>
                    <field name="is_not_related_department" invisible="1"/>
                    <field name="employee_user_id" invisible="1"/>
                    <field name="state"/>
                    <button name="%(wizard_approver_fin_100_action)d" type="action" string="Action" class="fa fa-tasks"
                            attrs="{'invisible':['|',('show_fin','!=',True),('state','=','reject')]}"
                            context="{'ack': is_related_department, 'not_ack': is_not_related_department, 'active_id': active_id}"
                    />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="fin_system_100_projects_tree_view">
            <field name="name">fin.system.100.line.projects.view</field>
            <field name="model">fw_pfb_fin_system_100_projects</field>
